---
import { Dropdown, DropdownItems } from "astro-navbar";
import { Icon } from "astro-icon";
const { title, lastItem, children } = Astro.props;
---

<li class="relative z-50">
  <Dropdown class="group">
    <button
      class="flex items-center gap-1 w-full lg:w-auto lg:px-3 py-2 text-nav-a hover:text-millers-gold">
      <span>{title}</span>
      <svg
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 24 24"
        stroke-width="3"
        stroke="currentColor"
        class="w-3 h-3 mt-0.5 group-open:rotate-180">
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          d="M19.5 8.25l-7.5 7.5-7.5-7.5"></path>
      </svg>
    </button>
    <DropdownItems>
      <div
        class:list={[
          "lg:absolute  w-full  lg:w-48",
          lastItem
            ? "lg:right-0 origin-top-right"
            : "lg:left-0 origin-top-left",
        ]}>
        <div class=" lg:bg-slate-700/75 backdrop-blur-xl lg:rounded-md lg:shadow lg:border lg:border-slate-800 flex flex-col">
          {
            children.map((item, i) => (
              (!item.mitgliedsantrag)
              ?
                <a
                  href={item.path}
                  class:list={[
                    "py-1 text-nav-a hover:text-nav-a-hover lg:text-gray-300 lg:hover:bg-yellow-100/50 px-3 lg:py-2", 
                    (i == children.length - 1)
                      ? "lg:rounded-b-md"
                      : "",
                    (i == 0)
                      ? "lg:rounded-t-md"
                      : ""
                  ]}>
                  {
                    item.external 
                      ? <span class="has-tooltip"><Icon 
                          class="w-4 inline " 
                          name="uil:external-link-alt" 
                          title={"Dieser Externe Link fÃ¼hrt zu " + item.path }
                        ></Icon><span class="tooltip rounded shadow-lg p-1 bg-gray-100  text-gray-500 text-xs -mx-20 -mt-8">Externer Link</span></span>
                      : <span></span>
                  }
                  {item.title}
                </a>
              :
              <a
                  href={item.path}
                  class:list={[
                    "py-1 text-nav-a hover:text-nav-a-hover lg:text-gray-300 lg:hover:bg-yellow-100/50 px-3 lg:py-2", 
                    (i == children.length - 1)
                      ? "lg:rounded-b-md"
                      : "",
                    (i == 0)
                      ? "lg:rounded-t-md"
                      : ""
                  ]}
                  download
                  >
                  {item.title}
                </a>
            ))
          }
        </div>
      </div>
    </DropdownItems>
  </Dropdown>
</li>

<style>
  .tooltip{
    visibility: hidden;
    position: absolute;
  }
  .has-tooltip:hover .tooltip {
    visibility: visible;
    z-index: 100;
  }
</style>