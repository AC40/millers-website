---
import Secret from "./Secret.astro";
---
<div
	class="grid grid-cols-1 sm:grid-cols-3 text-left sm:text-center md:text-left gap-y-4 bg-yellow-200/75 w-full py-8 px-8">
	<div class="my-auto">
		<a href="/impressum" class="footer-a">Impressum</a>
		<br />
		<a href="/datenschutz" class="footer-a">Datenschutzerkärung</a>
		<br />
		<a href="/kontakt" class="footer-a">Kontakt</a>
	</div>

	<hr class="sm:hidden border border-slate-500">

	<div class="my-auto text-left sm:text-center">
		<p class="text-sm text-slate-800">
			<span class="inline-block"
				>Copyright © {new Date().getFullYear()} Minden
			</span>
			<span class="inline-block">Bandits/Millers |</span>
			<span class="inline-block">Alle Rechte vorbehalten.</span>
		</p>
		{/*
			Can we ask you a favor 🙏
			Please keep this backlink on your website if possible.
			or Purchase a commercial license from https://web3templates.com
		*/}
		<p class="text-xs text-slate-500 mt-1">
			Made with the help of <a
				href="https://web3templates.com"
				target="_blank"
				rel="noopener"
				class="hover:underline">
				Web3Templates
			</a>
		</p>
	</div>

	<hr class="sm:hidden border border-slate-500">

	<div class="text-left sm:text-center md:text-right my-auto">
		<a href="mailto:minden@millers.de" class="footer-a">
			<Secret
				string="minden.millers@gmail.com"
				link="mailto:minden.millers@gmail.com"
				nostyle={true}
			/>
			
		</a>
		<br />
		<a href="/mitgliedsantrag.pdf" class="footer-a">Mitgliedsantrag</a>
	</div>
</div>
