---
import Layout from "@layouts/Layout.astro";
import Container from "@components/container.astro";
import CookieBanner from "@components/cookie-banner.astro"
import { Picture } from "@astrojs/image/components";
import { Icon } from "astro-icon";

import abstechenImg from "../assets/millers/historie/ballpark-stechen.jpg";
import plans from "../assets/millers/historie/plans.jpg";
import backstop from "../assets/millers/historie/backstop.jpg";
import Map from "@components/map.astro";

const ballparkHistoryData = await (await fetch("https://wordpress.mindenmillers.de/wp-json/wp/v2/websitetexte?slug=ballpark-geschichte")).json()
const ballparkHistory = ballparkHistoryData[0].acm_fields.text
